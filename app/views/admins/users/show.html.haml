= render partial: 'admins/dashboard/sidebar'
.col-lg-8.main
  .row
    %ol.breadcrumb
      %li
        %a{:href => "/admins/home"}
          %span.glyphicon.glyphicon-home{"aria-hidden" => "true"}
      %li.active= @user.class
  .row
    .panel.panel-default
      .panel-heading
        .col-lg-6
          %h3
            = I18n.t("admin.users")
        .col-lg-2
          .col-lg-2
          .col-lg-1
        .col-lg-4.adduserbtn
          = link_to edit_admins_user_path(@user.id), class: "btn btn-primary" do
            %i.glyphicon.glyphicon-pencil
            %strong Edit
          = link_to admins_users_path, class: "btn btn-info" do
            %i.glyphicon.glyphicon-arrow-left
            %strong Back        
      .panel-body
        %ul.nav.nav-tabs
          %li.active
            %a{"data-toggle" => "tab", :href => "#tab1default"} Basic Info
          %li
            %a{"data-toggle" => "tab", :href => "#tab2default"} Roles
        .tab-content
          #tab1default.tab-pane.fade.in.active
            .col-lg-6
              .panel-body
                .col-lg-7
                  %label ID :
                .col-lg-5
                  = @user.id
                .col-lg-7
                  %label Email :
                .col-lg-5
                  = @user.email
                .col-lg-7
                  %label First Name :
                .col-lg-5
                  = @user.first_name
                .col-sm-7
                  %label Last Name :
                .col-sm-5
                  = @user.last_name
                .col-sm-7
                  %label City :
                .col-sm-5
                  = @user.city
                .col-sm-7
                  %label Mobile No :
                .col-sm-5
                  = @user.mobile_number
                %br/
          #tab2default.tab-pane.fade
            %h3
              = @user.roles.map{|r| r.name}.join(",")
            %hr



